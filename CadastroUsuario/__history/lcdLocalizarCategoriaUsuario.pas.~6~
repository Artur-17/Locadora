class procedure TLocalizarCategoriaUsuario.exibirCategoriaUsuario;
var
  lcadastro : TLocalizarCategoriaUsuario;
begin
  lcadastro := TLocalizarCategoriaUsuario.Create(nil);
  lcadastro.ShowModal();
  FreeAndNil(lcadastro);
end;

